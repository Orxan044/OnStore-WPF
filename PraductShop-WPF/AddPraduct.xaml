<Window x:Class="PraductShop_WPF.AddPraduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PraductShop_WPF"
        mc:Ignorable="d" Icon="Images/add-to-basket.png" WindowStartupLocation="CenterScreen"
        Title="AddPraduct" Height="470" Width="350" ResizeMode="NoResize" FontSize="18">
    <Grid>
        <StackPanel>
            <Image x:Name="ImageBox"  Height="200"></Image>
            <Button Click="ImageShow_Click" >Add Praduct Image</Button>
            <TextBlock Margin="5"  Height="30" >Name</TextBlock>
            <TextBox x:Name="txtBoxName"></TextBox>
            <TextBlock Margin="5"  Height="30" >Price</TextBlock>
            <TextBox x:Name="txtBoxPrice"></TextBox>
            <Button Click="AddPraduct_Click" Margin="10">Add Praduct</Button>
        </StackPanel>
    </Grid>
</Window>
